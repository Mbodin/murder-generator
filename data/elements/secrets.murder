    sentence
    begin
      translation fr "Afin que cela reste secret, " P:+pro " s’est contenté d’une simple lettre mise directement et discrètement dans la poche de sa veste : " L:+pro " la découvrira bien après."
      translation en "To keep things discrete, " P:+pro " just wrote a simple letter to be placed in the pocket of " L:+pos " jacket: " L:+pro " will notice it much later."
      translation eo "Por ke neniu alia sciu, " P:+pro " simple skribis leteron kaj rekte kaj diskrete enmetis ĝin en la poŝo de " L:+pos " vestaĵo: " L:+pro " malkovros ĝin ja poste."
    end
  end

  provide event lasting minutes to L
  begin
    event Personal

    sentence
    begin
      translation fr "En tant que membre de la Société très secrète, " P " a proposé ses services à " L "."
      translation en "As a member of the Very Secret Society, " P " offered " P:+pos " services to " L "."
      translation eo "Kiel ano de la sekretega Asocio, " P " proponis siajn servojn al " L "."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " ne l’a bien entendu pas fait directement."
      translation fr P:+sbeg:+pro " a cependant voulu rester discret" P:+agr "."
      translation en "Oviously, " P:+pro " did not offered them directly."
      translation en "However, " P:+pro " wanted to stay discrete."
      translation eo "Kompreneble, " P:+pro " ne rekte proponis ilin."
      translation eo "Tamen, " P:+pro " ne volis logi eksterajn okulojn."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " a donc glissé une lettre dans la poche de sa veste."
      translation en P:+sbeg:+pro " thus slipped a letter in " L:+pos " jacket’s pocket."
      translation eo P:+sbeg:+pro " do diskrete enmetis leteron en la poŝo de " L:+pos " vestaĵo."
    end

    sentence
    begin
      translation fr "Ça a vraiment bien marché : " L:+pro " ne s’est rendu compte de la lettre que bien après !"
      translation fr "L’idée était bonne, mais la discrétion est encore à travailler : " L:+pro " s’est assez rapidement rendu compte que quelqu’un cherchait à lui transmettre un message… et a donc fait comme si de rien n’était pour rester discret" L:+agr "."
      translation fr "L’idée était bonne, mais la dextérité reste à travailler : la lettre est tombée par terre de manière assez voyante alors qu’" P:+pro " s’en allait."
      translation en "It worked pretty well: " L:+pro " only realised the letter much later!"
      translation en "The idea was good, but stealthiness is to be improved: " L:+pro " quickly realised that someone wanted to give " L:+cli " a message… and stayed still to avoid attracting attention."
      translation en "The idea was good, but dexterity is to be improved: the letter fell over in a quite visible way as soon as " P:+pro " went away."
      translation eo "Bonege funkciis: " L:+pro " nur konsciiĝis pri la letero multe da tempo poste!"
      translation eo "La ideo bonas, sed silentemeco plibonigindas: " L:+pro " rapide konsciiĝis ke iu provis disdoni mesaĝon… kaj ĉesis movi por daŭre esti diskreta."
      translation eo "La ideo bonas, sed ekzerciteco plibonigindas: la letero videblege elfalis dum " P:+pro " estis eliranta."
    end
  end

  provide phantom event lasting weeks to P

  provide relation from P to L as trust

  remove difficulty to L
end


(* ** The Triumvirate *)

attribute SecretSociety Triumvirate
begin
  translation fr "le Triumvirat"
  translation en "the Triumvirate"
  translation eo "la Triumvirato"
end

unique element TriumvirateSinceBirth
begin
  let A be player with contact FamilyRelation to C not as Parent
  let B be player with contact FamilyRelation to C not as Parent
  let C be player
  let any other player be with attribute SecretSociety not as Triumvirate
                          with contact FamilyRelation to C not as Parent

  provide phantom event lasting weeks to A and B and C
  begin
    event Personal
  end

  provide event lasting days to A and B and C
  begin
    event Personal
    assume event ParentDeath to C before

    provide strict attribute SecretSociety to A as Triumvirate
    provide strict attribute SecretSociety to B as Triumvirate
    provide strict attribute SecretSociety to C as Triumvirate

    provide compatible attribute RoleInSecretSociety to A as Normal
    provide compatible attribute RoleInSecretSociety to B as Normal
    provide compatible attribute RoleInSecretSociety to C as Normal

    sentence
    begin
      translation fr A:+sbeg ", " B ", et " C:fem " ont étés choisis par les parents de cette dernière."
      translation fr A:+sbeg ", " B ", et " C " ont étés choisis par les parents de ce dernier."
      translation en A:+sbeg ", " B ", and " C " have been chosen by the parents of the latter."
      translation eo A:+sbeg ", " B ", kaj " C " estis elektitaj de la gepatroj de ĉi lasta."
    end

    sentence
    begin
      translation fr "Ces derniers étaient des précédents membres du Triumvirat, une société secrète basée sur la confiance."
      translation en "These were previous members of the Triumvirate, a trust-based secret society."
      translation eo "Tiuj estis pasintaj anoj de la Triumvirato, iu fidfundamenta sekreta asocio."
    end

    sentence
    begin
      translation fr A:+sbeg ", " B ", et " C " sont maintenant les nouveaux membres du Triumvirat."
      translation en A:+sbeg ", " B ", et " C " are now the current members of the Triumvirate."
      translation eo A:+sbeg ", " B ", et " C " nun estas la nunaj anoj de la Triumvirato."
    end

    sentence
    begin
      translation fr "Ils se doivent mutuellement confiance."
      translation fr A:+empty:fem B:+empty:fem C:+empty:fem "Elles se doivent mutuellement confiance."
      translation en "They owe each other mutual trust."
      translation eo "Ili devas fidi unu la alian."
    end

    sentence
    begin
      translation fr "Ils sont prêts à tout pour s’aider les uns les autres."
      translation fr A:+empty:fem B:+empty:fem C:+empty:fem "Elles sont prêtes à tout pour s’aider les unes les autres."
      translation en "They are ready to face anything to help each other."
      translation eo "Ili pretas fari ion ajn por helpi unu la alian."
    end

    sentence
    begin
      translation fr "Mais en même temps, ils doivent respecter leurs différences."
      translation fr A:+empty:fem B:+empty:fem C:+empty:fem "Mais en même temps, elles doivent respecter leurs différences."
      translation en "But in the same time, they must respect their differences."
      translation eo "Sed samtempe, ili devas respekti ties malsamecojn."
    end

    sentence
    begin
      translation fr "En particulier, la vie des autres n’appartient qu’aux autres : jamais ils essayeront de chercher à connaître les secrets des autres membres."
      translation fr A:+empty:fem B:+empty:fem C:+empty:fem "En particulier, la vie des autres n’appartient qu’aux autres : jamais elles essayeront de chercher à connaître les secrets des autres membres."
      translation en "In particular, the life of another only is a private’s matter: they should never seek knowledge about the other member’s secrets."
      translation eo "Precipe, la vivojn de aliuloj oni ne zorgas: neniam ili provos serĉi sekretojn inter si."
    end

    sentence
    begin
      translation fr "De plus, ils n’essayeront pas de partager leurs propres sentiments, secrets, ou buts."
      translation fr A:+empty:fem B:+empty:fem C:+empty:fem "De plus, elles n’essayeront pas de partager leurs propres sentiments, secrets, ou buts."
      translation en "Furthermore, they won’t try to share their own feelings, secrets, or goals."
      translation eo "Krome, ili neniam provos kundividi siajn proprajn sentojn, sekretojn, aŭ celojn."
    end

    sentence
    begin
      translation fr "Le triumvirat n’est pas un groupe d’amis : c’est une société secrète."
      translation en "The Triumvirate is not a group of friends: it’s a secret society."
      translation eo "La Triumvirato ne temas pri grupo de amikoj, sed pri sekreta asocio."
    end

    sentence
    begin
      translation fr "Cette dernière a existée durant des générations et continuera après eux."
      translation en "It lasted for generations, and it will outlive them all."
      translation eo "Ĝi daŭris dum generacioj, kaj daŭre ekzistos post ili."
    end
  end

  provide phantom event lasting years to A and B and C

  provide relation between A and B as trust
  provide relation between B and C as trust
  provide relation between C and A as trust
end

element TriumvirateSubstitution
begin
  let A be player with attribute SecretSociety as Triumvirate
  let B be player with attribute SecretSociety as Triumvirate
  let C be player with attribute SecretSociety as Triumvirate
                  with contact Goal to A as Harm

  provide event lasting days to C
  begin
    event Personal
    assume event providing attribute SecretSociety to A and C before
    assume event providing contact Goal from C to A before

    sentence
    begin

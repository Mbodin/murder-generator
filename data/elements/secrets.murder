unique element InternalPeaceFundedTheDreamTravellers
begin
  let G be player with attribute Specy as God
                  with attribute DivineAllegiance as InternalPeace

  provide immediate event to G
  begin
    event Description
    event Personal
    assume event Personal to G after
    assume event providing attribute Specy to G before
    assume event providing attribute DivineAllegiance to G before
    assume no event Dream to (* TODO: any player *) G before

    sentence
    begin
      translation fr "Il y a bien longtemps, " G " a créé une société secrête."
      translation en "A long time ago, " G " created a secret society."
      translation eo "Antaŭ longa tempo, " G " kreis sekretan asocion."
    end

    sentence
    begin
      translation fr "Une société secrête onirique."
      translation en "An oniric secret society."
      translation eo "Sonĝa sekreta asocio."
    end

    sentence
    begin
      translation fr G:+sbeg:+pro " a appris à ses membres à contrôler leurs rêves."
      translation en G:+sbeg:+pro " teached its members to control their dreams."
      translation eo G:+sbeg:+pro " instruis ties anojn kontroli siajn sonĝojn."
    end

    sentence
    begin
      translation fr "À se parler en rêve grâce à un sable magique."
      translation en "To talk each other in dream thanks to a magical sand."
      translation eo "Paroli unu la aliajn dank’ al magia sablo."
    end

    sentence
    begin
      translation fr "À voyager entre les rêves."
      translation en "To travel through dreams."
      translation eo "Vojaĝi tra sonĝojn."
    end

    sentence
    begin
      translation fr "Ce sont les navigateurs de rêve."
      translation en "They are the dream travellers."
      translation eo "Ili estas la sonĝistoj."
    end

    provide strict attribute SecretSociety to G as DreamTravellers
    provide attribute RoleInSecretSociety to G as Leader
  end

  provide phantom event lasting decades to G

  provide phantom event lasting decades to G

  provide phantom event lasting decades to G
end


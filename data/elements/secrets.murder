
(* Secrets so dark that learning about them might make the player reconsider all
 * previous objectives. *)
category DarkSecrets
begin
  category NonKids

  translation fr "Lourds secrets"
  translation en "Dark secrets"
  translation eo "Pezegaj sekretoj"

  description fr "Des secrets profonds qui risqueraient de détruire la vie de certains s’ils en venaient à être découverts."
  description en "Deep secrets which, if publicly revealed, may damage the live of some."
  description eo "Profunde kaŝitaj sekretoj kiuj, se oni publikigas ilin, povas detrui kun la vivo de kelkaj homoj."
end


(* * Secret Societies *)

declare attribute SecretSociety
begin
  translation fr "Membre d’une société secrète"
  translation en "Member of a secret society"
  translation eo "Ano de sekreta asocio"
end

internal attribute SecretSociety None
begin
  translation fr "non"
  translation en "no"
  translation eo "ne"
end

element NotMemberOfASecretSociety
begin
  let P be player

  provide compatible attribute SecretSociety to P as None
end

unique element NoSecretSociety
begin
  provide compatible attribute SecretSociety to any other player as None
end

unique element AllSecretSociety
begin
  let any other player be with attribute SecretSociety not as None
end

declare attribute RoleInSecretSociety
begin
  translation fr "Rôle dans une société secrète"
  translation en "Role in a secret society"
  translation eo "Rolo en sekreta asocio"
end

internal attribute RoleInSecretSociety Normal
begin
  translation fr "normal"
  translation en "normal"
  translation eo "normala"
end

attribute RoleInSecretSociety Manager
begin
  translation fr "responsable"
  translation en "manager"
  translation eo "zorgisto"
end

attribute RoleInSecretSociety Leader
begin
  translation fr "chef"
  translation en "leader"
  translation eo "estro"
end

element NewLeaderForSecretSociety
begin
  let P be player with attribute SecretSociety not as None
                  with attribute RoleInSecretSociety as Leader
                  with attribute Age as Old

  provide phantom event lasting years to P
  begin
    event Personal
  end

  provide event lasting minutes to P
  begin
    event Personal
    assume no event providing attribute SecretSociety to P after
    assume event providing attribute RoleInSecretSociety to P before

    sentence
    begin
      translation fr P:+sbeg " a été le guide de sa société secrète pendant plusieurs années."
      translation en P:+sbeg " has been guide of " P:+pos " secret society for years."
      translation eo P:+sbeg " estris " P:+pos:+acc " sekretan asocion dum jaroj."
    end

    sentence
    begin
      translation fr "Il est temps de désigner un successeur afin que cette société secrète puisse perdurer."
      translation en "It is now time to nominate a successor in order for this society to keep on."
      translation eo "Nun estas tempo trovi sekvulon por daŭrigi kun la asocio."
    end
  end
end

element LeaderSeeksForNewRecruits
begin
  let P be player with attribute SecretSociety not as None
                  with attribute RoleInSecretSociety as Leader
                  with attribute Age as Old

  provide immediate event to P
  begin
    event Personal
    assume event providing attribute RoleInSecretSociety to P before

    sentence
    begin
      translation fr "Il devient de plus en plus difficile pour " P " de s’assurer que sa société secrète remplisse son rôle."
      translation en "It is now more and more difficult for " P " to make sure that " P:+pos " secret society is fulfilling its purpose."
      translation eo "Nun estas malpli kaj malpli facila por " P " zorgi ke " P:+pos " sekreta asocio plenumas sian celon."
    end

    sentence
    begin
      translation fr "Il est temps de chercher de nouvelles recrues."
      translation en "It is time to look for new recruits."
      translation eo "Estas nun tempo trovi novajn anojn."
    end

    sentence
    begin
      translation fr "Rechercher de nouvelles recrues pour une société secrète peut paraître contradictoire : il faut donc que ces nouvelles recrues soient dévouées, efficaces, mais surtout discrètes."
      translation en "Looking for new recruits in a secret society might seem an oxymore: it is thus crucial for these new recruits to be devoted, efficient, but more than other, discrete."
      translation eo "Serĉi novulojn por aliĝi al sekreta asocio povas ŝajni paradoksan: nepras do ke tiuj novuloj esti sindonemaj, efikaj, sed ĉefe silentemaj."
    end

    sentence
    begin
      translation fr "Qui pourrait remplir de telles conditions ?"
      translation en "Who would fit such requirements?"
      translation eo "Kiu taŭgus por tio?"
    end
  end

  add complexity to P
end

element LetterGotInTheWrongHands
begin
  let P be player with attribute SecretSociety not as None
                  with attribute Disability not as Blind
  let T be player with attribute Job as Thief
                  with attribute Disability not as Blind

  provide event lasting minutes to T
  begin
    event Work
    assume event providing attribute Job to T before

    sentence
    begin
      translation fr T:+empty:fem "Dans le métier de voleuse, ce qui est intéressant, ce sont les surprises."
      translation fr T:+empty "Dans le métier de voleur, ce qui est intéressant, ce sont les surprises."
      translation en "What’s interesting about being a thief is surprises."
      translation eo "Kio estas interesa pri esti ŝtelisto estas la surprizoj."
    end

    sentence
    begin
      translation fr "En faisant les poches de " P ", " T " a récupéré une lettre."
      translation en "While peeking in " P "’s pockets, " T " got a letter back."
      translation eo "Ŝtelante la poŝojn de " P ", " T " ekŝtelis leteron."
    end

    sentence
    begin
      translation fr "En la lisant discrètement, " T:+pro " a appris qu’" P:+pro " faisait partie d’une société secrète."
      translation en "Reading it discreetly, " T:+pro " learnt that " P:+pro " was being part of a secret society."
      translation eo "Diskrete legante ĝin, " T:+pro " malkovris ke " P:+pro " estas ano de sekreta asocio."
    end

    sentence
    begin
      translation fr "Aucun nom n’était indiqué : la lettre parlait juste d’un rendez-vous « là où vous savez, lorsqu’on vous l’indiquera »."
      translation en "No name was written, though: the letter only mentioned a meeting “where you know, when being indicated”."
      translation eo "Neniu nomo estis indikita: la letero nur menciis rendevuon “kie vi scias, kiam oni al vi indikos”."
    end

    sentence
    begin
      translation fr T:+sbeg:+pro " a trouvé plus prudent de remettre discrètement la lettre là où elle était."
      translation en T:+sbeg:+pro " had better to place the letter back where it was."
      translation eo T:+sbeg:+pro " elektis diskrete remeti la leteron kie ĝi estis."
    end
  end

  provide relation from T to P as undetermined
  add difficulty to P
end

element IntimateGettingSuspicious
begin
  let P be player with attribute SecretSociety not as None
  let I be player with contact Know to P as Intimate
                  with attribute SecretSociety as None

  provide event lasting weeks to I
  begin
    event Personal
    assume event providing attribute SecretSociety to P before
    assume event providing contact Know from I to P before

    sentence
    begin
      translation fr I:+sbeg " a remarqué un comportement étrange de la part de " P "."
      translation en I:+sbeg " noticed an unusual behaviour from " P "."
      translation eo I:+sbeg " rimarkis strangan agadon de " P "."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " s’absente fréquement, avec des excuses pas toujours très crédibles."
      translation en P:+sbeg:+pro " is frequently going away, sometimes with strange excuses."
      translation eo P:+sbeg:+pro " ofte eliras, disdonante malprobeblajn ekskuzojn."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " cache quelque chose."
      translation en P:+sbeg:+pro " is hidding something."
      translation eo P:+sbeg:+pro " ion kaŝas."
    end
  end

  provide relation from I to P as undetermined
  add difficulty to P
end

element MeetingsGettingSuspicious
begin
  let P be player with attribute SecretSociety not as None
                  with contact Know to I as Intimate
  let I be player with attribute SecretSociety as None
                  with contact Know to P as Intimate

  provide event lasting days to P
  begin
    event Personal
    assume event providing attribute SecretSociety to P before
    assume event providing contact Know from I to P before
    assume event providing contact Know from P to I before

    sentence
    begin
      translation fr P:+sbeg " a peur de ne pas avoir été aussi subtil" P:+agr " que prévu lors des dernières réunions secrètes."
      translation en P:+sbeg " is afraid not to have been as subtle as planned in " P:+pos " last secret meetings."
      translation eo P:+sbeg " timas malsubtili en ties lastaj sekretaj kunsidoj."
    end

    sentence
    begin
      translation fr "En particulier, " P:+pro " craint que " I " puisse avoir remarqué ses sorties répétées."
      translation en "In particular, " P:+pro " is afraid that " I " could have noticed " P:+pos " repetitive absences."
      translation eo P:+sbeg:+pro " precipe timas ebli ke " I " rimarkis ties oftajn eliradojn."
    end

    sentence
    begin
      translation fr "Il faudrait songer à régler cette affaire."
      translation en "It would be nice to deal with this."
      translation eo "Bonus zorgi pri tio."
    end

    sentence
    begin
      translation fr "Peut-être est-il temps de proposer à la prochaine réunion secrète l’introduction d’un nouveau membre ?"
      translation fr "Peut-être serait-il temps de proposer l’introduction d’une nouvelle recrue à la prochaine réunion secrète ?"
      translation en "What about suggesting a new member for the secret society?"
      translation en "Maybe it would the right time to suggest a new member to the secret society?"
      translation eo "Kio pri proponi novan anon en la sekreta asocio?"
      translation eo "Eble estus bona tempo por enkonduki novan anon en la sekreta asocio?"
    end
  end

  provide relation from P to I as undetermined
end

attribute RoleInSecretSociety Treasurer
begin
  translation fr "trésorier"
  translation en "treasurer"
  translation eo "kasisto"
end

element TreasurerAndThief
begin
  let P be player with attribute SecretSociety not as None
                  with attribute RoleInSecretSociety as Treasurer
  let T be player with attribute Job as Thief
                  with attribute SecretSociety as None

  provide event lasting days to P
  begin
    event Personal
    assume no event providing attribute SecretSociety to P after
    assume event providing attribute RoleInSecretSociety to P before
    assume no event providing attribute Job to T after

    sentence
    begin
      translation fr "Afin de financer sa société secrète, " P " a souvent recours aux services de " T:fem " en tant que voleuse."
      translation fr "Afin de financer sa société secrète, " P " a souvent recours aux services de " T " en tant que voleur."
      translation en "In order to fund " P:+pos " secret society, " P " frequently needs the services of " T " as a thief."
      translation eo "Por financi sian sekretan asocion, " P " ofte bezonas la ŝtelajn servicojn de " T "."
    end

    sentence
    begin
      translation fr T:+empty:fem "Cette dernière n’a cependant aucune idée de l’utilisation des fonds."
      translation fr "Ce dernier n’a cependant aucune idée de l’utilisation des fonds."
      translation en "The latter has however no idea what these funds are for."
      translation eo "Sed " T:+pro " havas nenian ideon de la uzo de tiu mono."
    end

    sentence
    begin
      translation fr "Les braquages se payent en général par des faveurs, la société secrète ayant de très nombreux contacts dans de nombreuses sphères d’influences."
      translation en "Heists are generally payed by favors, the secret society having quite a lot of contacts amongst various spheres of influence."
      translation eo "Ŝteladoj ĝenerale estas pagita per favoroj, la sekreta asocio havanta sufiĉe da kontaktoj en diversaj influaj sferoj."
    end

    sentence
    begin
      translation fr "Pour l’instant, la balance est de son côté : " T:+pro " a volé des objets de valeur mais n’a pas encore indiqué de quelle faveur " T:+pro " pourrait besoin, se réservant le droit de la demander à tout moment."
      translation en "For now, the balance is in " T:+pos " side: " T:+pro " stole worthy objects but did not yet indicated what kind of favor " T:+pro " would need, keeping the right to ask in any moment."
      translation eo "Nuntempe, la konto estas en " T:+pos " flanko: " T:+pro " ŝtelis valorajn objektojn sed ankoraŭ ne indikis kian favoron " T:+pro " bezonus, konservante la rajton peti ĝin en iu ajn momento."
    end
  end

  provide event lasting days to T
  begin
    event Work

    sentence
    begin
      translation fr P:+sbeg " figure parmi les clients réguliers de " T "."
      translation en P:+sbeg " is a regular client of " T "."
      translation eo P:+sbeg " estas ofta kliento de " T "."
    end

    sentence
    begin
      translation fr "Il semblerait qu’" P:+pro " a besoin de beaucoup, beaucoup d’argent, pour une raison inconnue."
      translation en "It seems that " P:+pro " needs quite a lot of money, for an unknown reason."
      translation eo "Ŝajnas ke " P:+pro " ja bezonas amason de mono, ial ajn."
    end

    sentence
    begin
      translation fr "En échange des braquages, " P:+pro " propose de nombreux services."
      translation en "In exchange of each heist, " P:+pro " proposes various services."
      translation eo "Kontraŭ ĉiuj ŝtelado, " P:+pro " proponas variajn servicojn."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " possède un réseau assez impressionnant de contacts !"
      translation en P:+sbeg:+pro " is in contact with quite an impressive network!"
      translation eo P:+sbeg:+pro " havas kontakton kun mirinde multe da influsferoj!"
    end

    sentence
    begin
      translation fr "Et " P:+pro " est assez efficace lorsqu’on lui demande de l’aide : il ne faut vraiment pas hésiter à demander."
      translation en "And " P:+pro " is swift when help is requested: one should never hesitate to ask."
      translation eo "Kaj " P:+pro " ja rapidas se oni petas helpon: oni neniam hezitu demandi."
    end
  end

  provide phantom event lasting weeks to P and T
  begin
    provide contact Favor from P to T as Large
    provide contact Know between P and T as True
  end

  provide relation between T and P as chaotic
  provide relation from T to P as trust
end


(* ** The Very Secret Society *)

attribute SecretSociety VerySecret
begin
  translation fr "la Société vraiment secrète"
  translation en "the Very Secret Society"
  translation eo "la sekretega Asocio"
end

element TheVerySecretIsKnown
begin
  let S be player with attribute SecretSociety as VerySecret
  let P be player with contact Know to S as True

  provide event lasting seconds to P
  begin
    event Personal
    assume event providing attribute SecretSociety to S before
    assume event providing contact Know from P to S before

    sentence
    begin
      translation fr P:+sbeg " a entendu " S " parler tout" S:+agr " seul" S:+agr "."
      translation en P:+sbeg " heard " S " speaking alone."
      translation eo P:+sbeg " aŭdis " S:+acc " sole paroli."
    end

    sentence
    begin
      translation fr "C’était à propos d’une société « très secrète »."
      translation en "It was about a “very secret” society."
      translation eo "Temis pri “tre sekreta” asocio."
    end

    sentence
    begin
      translation fr "Étrange."
      translation en "Curious."
      translation eo "Strangas."
    end
  end
end

element MemberOfTheVerySecret
begin
  let P be player with attribute SecretSociety as VerySecret
                  with attribute RoleInSecretSociety not as Leader

  provide immediate event to P
  begin
    event Personal
    assume event providing attribute SecretSociety to P before

    sentence
    begin
      translation fr "La société vraiment secrète est tellement secrète que même " P " — qui fait pourtant partie de ses membres — ne sait pas ce que cette société secrète fait."
      translation en "The Very Secret Society is so secret that even " P "—who is one of its members—has no idea what this secret society does."
      translation eo "La sekretega Asocio tiom sekretas ke eĉ " P "—kiu estas ano de ĝi—ne scias ion ajn pri kion tiu sekreta asocia faras."
    end

    sentence
    begin
      translation fr "On raconte que des rendez-vous secrets se produisent entre ses membres, mais personne ne sait ce qui s’y discute."
      translation en "People tell that secret meetings happen between its members, but nobody knows what it being discussed."
      translation eo "Oni diras ke sekretaj kunsidoj okazas inter ties anoj, sed neniu scias kion oni tie babilas."
    end

    sentence
    begin
      translation fr "Il paraît que même ceux qui participent aux réunions secrètes ont du mal à s’en souvenir après la réunion."
      translation en "Rumors tell that even attendees to such secret meetings have trouble remembering what was being told."
      translation eo "Oni krome diras ke eĉ la partoprenantoj de tiaj sekretaj kunsidoj havas malfacilecon memori kion oni en ĝi diris."
    end

    sentence
    begin
      translation fr "C’est très secret."
      translation en "It very secret."
      translation eo "Sekretegas."
    end
  end
end

element MemberOfTheVerySecretThatKnowsTheSecret
begin
  let P be player with attribute SecretSociety as VerySecret

  provide immediate event to P
  begin
    event Personal
    assume event providing attribute SecretSociety to P before

    sentence
    begin
      translation fr P:+sbeg " a maintenant compris quel est le rôle de la Société vraiment secrète."
      translation en P:+sbeg " now understands what is the goal of the Very Secret Society."
      translation eo P:+sbeg " nun komprenas kio estas la celo de la sekretega Asocio."
    end

    sentence
    begin
      translation fr "Son but est de rester secrète."
      translation en "Its goal is to keep being secret."
      translation eo "Ties celo estas daŭre esti sekreta."
    end

    sentence
    begin
      translation fr "De faire en sorte que même ses membres oublient son existence."
      translation en "To make sure that even its members forget about it."
      translation eo "Zorgi por ke eĉ ties anoj forgesu pri ĝi."
    end

    sentence
    begin
      translation fr "C’est une tâche difficile, mais " P:+pro " n’est pas membre pour rien et saura se débrouiller."
      translation en "It’s a difficult task, but " P:+pro " is a member for a reason: " P:+pro " can figure this out."
      translation eo "Estas malfacilega, sed " P:+pro " certe ial ĝin anas: " P:+pro " scios kion fari."
    end
  end

  add complexity to P
end

element RememberBeingPartOfTheVerySecretSociety
begin
  let P be player

  provide event lasting days to P
  begin
    event Personal
    provide attribute SecretSociety to P as VerySecret

    sentence
    begin
      translation fr "Un jour, " P " se souvenait soudainement de quelque chose."
      translation en "One day, " P " suddenly remembered something."
      translation eo "Iam, " P " subite ion memoris."
    end

    sentence
    begin
      translation fr "C’était important."
      translation en "It was important."
      translation eo "Ion gravan."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " était en réunion avec d’autres personnes."
      translation en P:+sbeg:+pro " was meeting other people."
      translation eo P:+sbeg:+pro " kunsidis kun aliaj homoj."
    end

    sentence
    begin
      translation fr "Tout le monde avait le visage masqué."
      translation en "Everyone’s face was hidden."
      translation eo "Ĉies vizaĝoj estis kaŝitaj."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " est membre d’une société secrète."
      translation en P:+sbeg:+pro " is a member of a secret society."
      translation eo P:+sbeg:+pro " estas ano de sekreta asocio."
    end

    sentence
    begin
      translation fr "La plus secrète de toutes : la Société vraiment secrète."
      translation en "The most secret of them all: the Very Secret Society."
      translation eo "La plej sekreta: la sekretega Asocio."
    end

    sentence
    begin
      translation fr "Malheureusement, " P:+pro " a du mal à se souvenir."
      translation en "Unfortunately, " P:+pro " has trouble remembering."
      translation eo "Bedaŭrinde, malfacilas por " P:+pro " memori."
    end

    sentence
    begin
      translation fr "C’est bizarre."
      translation en "It’s strange."
      translation eo "Strangas."
    end
  end
end

element ParentMadeChildMemberOfTheVerySecretSociety
begin
  let P be player
  let any other player be with contact FamilyRelation to P not as Parent or Sibling

  provide event lasting days to P
  begin
    event Personal
    provide attribute SecretSociety to P as VerySecret

    sentence
    begin
      translation fr "Un jour, les parents de " P " sont devenus soudainement sérieux."
      translation en "Some time ago, " P "’s parents suddenly became very serious."
      translation eo "Iam, la gepatroj de " P " subite serioziĝis."
    end

    sentence
    begin
      translation fr "Ils avaient quelque chose à lui transmettre."
      translation en "They had something to pass upon."
      translation eo "Ili havis ion por disdoni."
    end

    sentence
    begin
      translation fr "Tous les membres de la famille ont été membres d’une société secrète depuis des générations."
      translation en "Since generations, each members of the family has been part of a secret society."
      translation eo "Ĉiuj familianoj estis anoj de iu sekreta asocio ekde generacioj."
    end

    sentence
    begin
      translation fr "C’est maintenant son tour de continuer la tradition."
      translation en "It’s now " P:+pos " turn to be part of the tradition."
      translation eo "Nun estas " P:+pos " vico agi en la tradicio."
    end

    sentence
    begin
      translation fr "C’est une tâche difficile : il s’agit de la Société vraiment secrète."
      translation en "It’s a difficult task: it is about the Very Secret Society."
      translation eo "Estas malfacila tasko: temas pri la sekretega Asocio."
    end

    sentence
    begin
      translation fr "Cette société est tellement secrète qu’il est très difficile de rencontrer d’autres membres pour s’organiser."
      translation en "This society is so secret that it is difficult to meet other members to organize oneself."
      translation eo "Ĉi tiu asocio tiom sekretas ke malfacilas trovi aliajn asocianojn por sinorganizi."
    end

    sentence
    begin
      translation fr "C’est maintenant sa tâche."
      translation en "It’s now " P:+pro " task."
      translation eo "Nun estas " P:+pro " tasko."
    end
  end

  provide phantom event lasting years to P

  add complexity to P
end

unique element LeaderOfTheVerySecretSociety
begin
  let P be player with attribute SecretSociety as VerySecret

  provide event lasting minutes to P
  begin
    event Personal
    assume no event providing attribute SecretSociety to P after

    provide attribute RoleInSecretSociety to P as Leader

    sentence
    begin
      translation fr "Lors d’une réunion secrète, " P:fem " a été désignée comme nouvelle présidente de la Société vraiment secrète."
      translation fr "Lors d’une réunion secrète, " P " a été désigné comme nouveau président de la Société vraiment secrète."
      translation en P:+sbeg " has been designated during a secret meeting as the new leader of the Very Secret Society."
      translation eo "Dum sekreta kunsido, " P " estis nomigita kiel la nova estro de la sekretega Asocio."
    end

    sentence
    begin
      translation fr "C’est une position difficile."
      translation en "It’s a tricky position."
      translation eo "Ne temas pri facila rolo."
    end

    sentence
    begin
      translation fr P:+sbeg:+pro " devra organiser les réunions secrètes, d’estimer combien de personnes sont au courant de ces réunions, et tenter de trouver des solutions pour que ce nombre diminue."
      translation en P:+sbeg:+pro " must organise all secret meetings, estimate how many people are aware of these meetings, and make sure that this number is decreasing."
      translation eo P:+sbeg:+pro " devas organizi la sekretajn kunsidojn, taski kiom da homoj scias pri tiuj kunsidoj, kaj trovi manierojn por ke tiu kvanto malkreskiĝu."
    end

    sentence
    begin
      translation fr "Le but de la Société vraiment secrète est en effet de rester secrète."
      translation en "Indeed, the goal of the Very Secret Society is to keep being secret."
      translation eo "La celo de la sekretega Asocio ja estas daŭre esti sekreta."
    end
  end

  add complexity to P
  add complexity to P
end

